---
import Layout from '../layouts/Layout.astro';
import {format} from 'date-fns';

interface Props {
    frontmatter: {
        title: string;
        description: string;
        pubDate: string;
        image?: string;
    };
}

const { frontmatter } = Astro.props as Props;

const formattedDate = format(new Date(frontmatter.pubDate), 'MMMM dd, yyyy');
---

<Layout title={frontmatter.title} description={frontmatter.description}>
    <div class="prose dark:prose-invert max-w-none">
        <h1 class="text-3xl font-bold mb-2">{frontmatter.title}</h1>
        <p class="text-gray-500 dark:text-gray-400 mb-4">Published: {formattedDate}</p>
        <p class="mb-6">{frontmatter.description}</p>
        <slot />
    </div>
</Layout>
