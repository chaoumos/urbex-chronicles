---
import Layout from '../layouts/Layout.astro';

const siteTitle = "Urbex Chronicles: Exploring the Abandoned World";
const siteDescription = "Discover forgotten architectural wonders. Urban exploration tips, safety guides, historical insights, and stunning photography from around the globe.";
---

<Layout title={siteTitle} description={siteDescription}>
	<section class="hero py-16">
		<div class="container mx-auto text-center">
			<h1 class="text-4xl font-bold mb-4">{siteTitle}</h1>
			<p class="text-lg mb-8">{siteDescription}</p>
			<a href="/blog" class="bg-accent hover:bg-dark-secondary text-light-text font-bold py-2 px-4 rounded">Explore the Chronicles</a>
		</div>
	</section>

	<section class="featured-image">
		<img src="https://placehold.co/1200x600.png" alt="An abandoned building at night" data-ai-hint="abandoned building at night" class="w-full object-cover"/>
	</section>

	<section class="disclaimer py-8">
		<div class="container mx-auto text-center">
			<p class="text-sm text-gray-400">Disclaimer: Urban exploration can be dangerous. Always respect local laws and property. This site does not encourage illegal activities.</p>
		</div>
	</section>

	<section class="latest-articles py-8">
		<div class="container mx-auto">
			<h2 class="text-2xl font-bold mb-4">Latest Articles</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
				{/* Placeholder for article list */}
				<div class="bg-dark-secondary rounded-lg shadow-md p-4">
					<img src="https://placehold.co/400x200.png" alt="Article Preview" data-ai-hint="inside an abandoned factory" class="w-full h-48 object-cover rounded-md mb-2"/>
					<h3 class="text-xl font-semibold">[Article Title Placeholder]</h3>
					<p class="text-sm">[Article Excerpt Placeholder]</p>
					<a href="#" class="text-accent hover:text-light-text">Read More</a>
				</div>
				<div class="bg-dark-secondary rounded-lg shadow-md p-4">
